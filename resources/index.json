{
  "id": "managed-rhacs",
  "config": {
    "prometheus": {
      "pod_monitors": [
        "prometheus/pod_monitors/rhacs-central-metrics.yaml",
        "prometheus/pod_monitors/prometheus-self-metrics.yaml"
      ],
      "rules": [
        "prometheus/prometheus-rules.yaml",
        "prometheus/billing-rules.yaml"
      ],
      "federation": "prometheus/federation-config.yaml",
      "observatorium": "rhacs-observatorium",
      "remoteWrite": "prometheus/remote-write.yaml",
      "overridePrometheusPvcSize": "250Gi"
    },
    "alertmanager": {
      "pagerDutySecretName": "rhacs-pagerduty"
    },
    "grafana": {
      "dashboards": [
        "grafana/rhacs-central-dashboard.yaml",
        "grafana/rhacs-cluster-overview-dashboard.yaml"
      ],
      "grafanaVersion": "9.1.0"
    },
    "promtail": {
      "enabled": false,
      "observatorium": "rhacs-observatorium",
      "namespaceLabelSelector": {
        "observability-operator/scrape-logging": "true"
      }
    },
    "observatoria": [
      {
        "id": "rhacs-observatorium",
        "secretName": "rhacs-observatorium"
      }
    ]
  }
}
